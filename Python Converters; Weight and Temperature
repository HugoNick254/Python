# Python Converters

# First, weight converter

weight = input("Enter the weight: ")

unit = input("Is that in Kilograms (K) or Pounds (L)? ")

if unit == "K" or "Kilograms" :
   weight = int(weight) * 2.205
   print(f"The weight is {weight} {unit}.")
elif unit == "L" or "Pounds" :
    weight = int(weight) / 2.205
    print(f"The weight is {weight} {unit}.")
else:
    print(f"Invalid input!")

# Temperature Converter

temperature = int(input("Enter the temperature: "))

unit = input("In what units is the temperature; Celcius (C) or Fahrenheit(F)? ")

if unit == "Celcius" or "C" :
    temperature = (temperature * 9) / 5 + 32
    print(f"The temperature is {temperature} degrees {unit}.")
elif unit == "Fahrenheit" or "F" :
    temperature = (temperature - 32) * 5 / 9
    print(f"The temperature is {temperature} degrees {unit}.")
else:
    print(f"Invalid input!")


